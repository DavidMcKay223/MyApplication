
<div class="mb-3">
    <Button Color="Color.Primary" @onclick="OnAdd">New Item</Button>
    <Button Color="Color.Secondary" @onclick="OnSearch">Search</Button>
    <Button Color="Color.Danger" @onclick="OnReset">Reset</Button>
</div>

@code {
    [Parameter]
    public EventCallback OnAdd { get; set; }

    [Parameter]
    public EventCallback OnSearch { get; set; }

    [Parameter]
    public EventCallback OnReset { get; set; }
}
